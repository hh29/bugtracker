<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="commentVBox" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bugtracker.Controller.Chat.CommentBubbleController">
   <Label fx:id="nameLabel" prefHeight="17.0" prefWidth="327.0" text="Name Label">
      <font>
         <Font name="Arial Bold" size="15.0" />
      </font>
   </Label>
   <Label fx:id="textLabel" prefWidth="457.0" text="Comment Text" wrapText="true">
      <font>
         <Font name="Al Bayan Plain" size="14.0" />
      </font>
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor>
   </Label>
   <Label fx:id="timestampLabel" alignment="BOTTOM_RIGHT" opacity="0.6" prefHeight="43.0" prefWidth="458.0" text="Timestamp Label" textAlignment="RIGHT" wrapText="true">
      <font>
         <Font size="11.0" />
      </font>
   </Label>
</VBox>
